{% extends "layouts/master.twig" %}

{% block content %}
    {# Render Dynamic Components from Salla Dashboard #}
    {% for component in page.components %}
        {% component component %}
    {% else %}
        {# Fallback content if no components are added via dashboard #}
        {# This ensures the page isn't empty on first load #}
        {% include 'components/home/hero.twig' %}
        {% include 'components/home/pricing.twig' %}
        {% include 'components/home/articles.twig' %}
    {% endfor %}
{% endblock %}
