{
  "name": "Magazine Theme",
  "version": "1.0.0",
  "description": "A custom Salla theme for magazine subscriptions.",
  "settings": [
    {
      "label": "General Settings",
      "type": "section",
      "id": "general",
      "fields": [
        {
          "label": "Primary Color",
          "type": "color",
          "id": "primary_color",
          "default": "#000000"
        }
      ]
    }
  ],
  "components": [
    {
      "name": "hero_slider",
      "title": "Magazine Cover (Hero)",
      "path": "components/home/hero.twig",
      "icon": "image",
      "fields": [
        {
          "id": "heading",
          "type": "text",
          "label": "Main Headline",
          "default": "Discover the World of Knowledge"
        }
      ]
    },
    {
      "name": "pricing_table",
      "title": "Subscription Plans",
      "path": "components/home/pricing.twig",
      "icon": "money_bill"
    },
    {
      "name": "featured_articles",
      "title": "Latest Articles",
      "path": "components/home/articles.twig",
      "icon": "align_left"
    }
  ]
}